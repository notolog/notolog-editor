include CHANGELOG.md
include CODE_OF_CONDUCT.md
include LICENSE
include README.md
include requirements.txt
include dev_requirements.txt
include test_requirements.txt
include ThirdPartyNotices.md

# Include example and doc files
recursive-include docs *
# Include all relevant lexeme files
recursive-include notolog/lexemes *
# Include all static files
recursive-include notolog/assets *
# Include all module files
recursive-include notolog/modules *

# Exclude all cache directories
global-exclude __pycache__
# Exclude all bytecode files
global-exclude *.pyc
